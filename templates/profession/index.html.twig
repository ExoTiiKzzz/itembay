{% extends 'base.html.twig' %}

{% block title %}Mes m√©tiers{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-center gap-5 my-5 flex-wrap">
        {% for job in jobs %}
            <div class="card" style="width: 20%;">
                <img src="{{ job.profession.imageUrl }}" class="card-img-top mt-2" alt="{{ job.profession.name }}" loading="lazy" height="100" width="100" onerror="this.src = '/images/no-photo.png'">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        {{ job.profession.name }}
                    </h5>


                    <div class="mt-auto text-right">
                        <p>Niveau {{ job.exp | professionLevelFromExp }}</p>

                        <a href="{{ path('app_player_job', { 'id': job.profession.id }) }}" class="btn btn-sm btn-primary mt-auto form-control">
                            Voir les recettes
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
