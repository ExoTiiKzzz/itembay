{% extends 'base.html.twig' %}

{% block title %}
    Lootbox
{% endblock %}

{% block body %}
    <div class="container text-white">

        <h1 class="text-center my-4">
            Liste des lootbox
        </h1>

        {% if lootboxes|length > 0 %}
            <div class="d-flex flex-wrap justify-content-between gap-3">
                {% for lootbox in lootboxes %}
                    <div class="card" style="width: 18%">
                        <div class="card-img-top px-3">
                            {% include 'common/svg/chest.html.twig' with {
                                'width': '100%',
                                'height': '100%',
                                'color': '#'~lootbox.color
                            } %}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ lootbox.name }}
                            </h5>
                            <p class="card-text">
                                {{ lootbox.description }}
                            </p>

                            <h6>
                                Prix : {{ lootbox.price | itemPrice | raw }}
                            </h6>
                            <a href="{{ path('app_lootbox_show', { id: lootbox.id }) }}" class="btn btn-primary mt-2">
                                Voir
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucune lootbox pour le moment
            </div>
        {% endif %}
    </div>

{% endblock %}
