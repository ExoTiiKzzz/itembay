{% if reports is defined and reports|length > 0 %}
    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col">Date de création</th>
            <th scope="col">Dernière modification</th>
            <th scope="col">Type</th>
            <th scope="col">Statut</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for report in reports %}
            <tr data-id="{{ report.id }}">
                <td>{{ report.title }}</td>
                <td>{{ report.createdAt|date('d/m/Y') }}</td>
                <td>{{ report.updatedAt|date('d/m/Y') }}</td>
                <td>{{ report.type.name }}</td>
                <td>{{ report.status.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_bug_report_show', {'id': report.id}) }}">
                        Voir
                    </a>
                    <a class="btn btn-outline-secondary deleteBtn" data-id="{{ report.id }}" href="{{ path('app_bug_report_delete', {'id': report.id}) }}">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
{% else %}
    <div class="alert alert-info">
        Vous n'avez pas encore signalé de bug.
    </div>
{% endif %}