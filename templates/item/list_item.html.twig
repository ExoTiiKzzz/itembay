<div class="card" style="width: 20%;">
    <img src="{{ item.imageUrl }}" class="card-img-top mt-2" alt="{{ item.name }}" loading="lazy" height="100" width="100" onerror="this.src = '/images/no-photo.png'">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">
            {{ item.name }}
        </h5>


        <div class="mt-auto text-right">
            <p> {{ item.buyPrice | itemPrice | raw }} </p>

            <a href="/item/{{ item.uuid }}" class="btn btn-sm btn-primary mt-auto form-control">
            Voir les choix
            </a>
        </div>
    </div>
</div>