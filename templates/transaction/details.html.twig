{% extends '/base.html.twig' %}

{% block title %}Commande {{ transaction.id }}{% endblock %}

{% block body %}
    {% set items = transaction.itemsFormatted %}
    <div class="container">
        <h1>Résumé de ma commande</h1>
        {% for item in items.defaultItems.items %}
            <div class="d-flex flex-wrap gap-5">
                <div class="card" style="width: 20%;">
                    <img src="{{ item.defaultItem.imageUrl }}" class="card-img-top mt-2" alt="{{ item.defaultItem.name }}" loading="lazy" height="100" width="100" onerror="this.src = '/images/no-photo.png'">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            {{ item.defaultItem.name }}
                        </h5>
                        <div class="mb-3">
                            Quantité : <strong>{{ item.quantity }}</strong>
                        </div>
                        <a href="{{ path('app_item', {'uuid': item.defaultItem.uuid}) }}" class="btn btn-sm btn-primary mt-auto form-control">
                            En acheter plus
                        </a>
                        <a href="{{ path('app_item_review', {'uuid': item.defaultItem.uuid}) }}" class="btn btn-sm btn-secondary mt-auto form-control">
                            Laisser un avis
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}