{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
    <div class="container text-white">
        <h1 class="my-5 text-center">Mes commandes</h1>
        {% if transactions is not empty %}
        <div class="d-flex flex-wrap gap-5">
            {% for transaction in transactions %}
                <div class="card" style="width: 20%;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            {{ transaction.id }}
                        </h5>
                        <div class="mb-3">
                            Date : {{ transaction.createdAt|date('d/m/Y') }}
                        </div>
                        <div class="mb-3">
                            Nombre d'articles : {{ transaction.transactionLines|length }}
                        </div>
                        <a href="{{ path('app_transaction_details', {'id': transaction.id}) }}" class="btn btn-sm btn-primary mt-auto form-control">
                            Voir le détail
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% else %}
            <div class="alert alert-info">
                Vous n'avez pas encore passé de commande.
            </div>
        {% endif %}
    </div>
{% endblock %}
