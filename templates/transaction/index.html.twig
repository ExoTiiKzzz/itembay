{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mes commandes</h1>
        <div class="d-flex flex-wrap gap-5">
            {% for transaction in transactions %}
                <div class="card" style="width: 20%;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            {{ transaction.id }}
                        </h5>
                        <div class="mb-3">
                            Date : {{ transaction.createdAt|date('d/m/Y') }}
                        </div>
                        <div class="mb-3">
                            Nombre d'articles : {{ transaction.transactionLines|length }}
                        </div>
                        <a href="{{ path('app_transaction_details', {'id': transaction.id}) }}" class="btn btn-sm btn-primary mt-auto form-control">
                            Voir le d√©tail
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
