<div class="account-activate card position-relative hover-grow {% if app.user.activeAccount.id == account.id %}active-account{% endif %}"
     style="width:20%;cursor:pointer;" data-id="{{ account.id }}">
    {% if app.user.activeAccount.id == account.id %}
        <i class="position-absolute fa-solid fa-check text-dark" style="top:10px;right:10px;"></i>
    {% endif %}
    <img src="{{ account.class.imageUrl }}" class="card-img-top mt-2" alt="{{ account.class.name }}" loading="lazy"
         height="100" width="100" onerror="this.src = '/images/no-photo.png'">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">
            {{ account.name }}<span class="text-sm text-secondary"> ({{ account.class.name }})</span>
        </h5>

        <div class="d-flex mt-3">
            <i class="fas fa-box account-inventory" data-id="{{ account.id }}" title="Inventaire"></i>
            <div class="d-flex gap-1 ms-auto">
                <i class="fas fa-edit account-edit" data-id="{{ account.id }}" title="Modifier"></i>
                {% if app.user.activeAccount.id != account.id %}
                    <i class="fas fa-trash-alt account-delete" data-id="{{ account.id }}" title="Supprimer"></i>
                {% endif %}
            </div>
        </div>
    </div>
</div>