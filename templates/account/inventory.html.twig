{% extends '/base.html.twig' %}

{% block title %}ItemBay - Mon inventaire{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mon inventaire</h1>
        <div class="d-flex flex-wrap gap-5">
            {% for item in inventory.defaultItems %}
                <div class="card" style="width: 20%;">
                    <img src="{{ item.imageUrl }}" class="card-img-top mt-2" alt="{{ item.name }}" loading="lazy"
                         height="100" width="100" onerror="this.src = '/images/no-photo.png'">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            {{ item.name }}
                        </h5>
                        <div class="mb-3">
                            Quantit√© : <strong>{{ item.quantity }}</strong>
                        </div>
                        <a href="{{ path('app_item', {'uuid': item.uuid}) }}" class="btn btn-sm btn-primary mt-auto form-control">
                            En acheter plus
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}