{% extends 'base.html.twig' %}

{% block title %}Se connecter !{% endblock %}

{% block body %}
    <div class="container text-white mt-5">
        <form method="post">
            <h2 class="text-center my-3">Se connecter</h2>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <!-- Username input -->
            <div class="mb-3">
                <label class="form-label" for="inputUsername">Nom d'utilisateur</label>
                <input type="text" id="inputUsername" class="form-control" value="{{ last_username }}" name="username" autocomplete="username" required autofocus/>
            </div>

            <!-- Password input -->
            <div class="mb-3">
                <label class="form-label" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required />
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="_remember_me" id="_remember_me">
                    <label class="form-check-label" for="_remember_me">Se souvenir de moi</label>
                </div>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <input type="hidden" name="referer" value="{{ referer }}">

            <div class="d-flex justify-content-end">
                <button class="btn btn-primary btn-block mb-4" type="submit">
                    Se connecter
                </button>
            </div>
        </form>
    </div>

{% endblock %}
