{% extends 'base.html.twig' %}

{# Profile management #}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <h2>Mon profil</h2>
    <form action="{{ path('app_update_profile') }}" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="username" class="form-label">Nom d'utilisateur</label>
            <input type="text" class="form-control form-control-sm" name="username" value="{{ app.user.username }}">
        </div>
        <div class="mb-3">

            <div class="d-flex">
                <img src="{{ asset('uploads/users/avatars/' ~ app.user.avatar) }}"
                     class="rounded-circle me-3"
                     alt="{{ app.user.avatar }}" width="24" height="24">
                <input class="form-control form-control-sm" type="file" name="avatar">
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-sm btn-outline-light ml-auto">Enregistrer</button>
        </div>
    </form>
{% endblock %}

