{% extends 'base.html.twig' %}

{% block title %}
    Catégories d'objets
{% endblock %}

{% block body %}
    <div class="row text-white mt-5 mx-2">
        <div class="col-md-2">
            {% include 'filter/item_list_filters.html.twig' with {
                'context': 'itemNatures',
            } %}
        </div>
        <div class="col-md-9">
            <ul class="d-flex flex-wrap gap-5 text-black">
                <h2 class="text-white w-100">
                    Encyclopédie des catégories d'objets
                </h2>
                {% if itemNatures | length > 0 %}
                    {% for itemNature in itemNatures %}
                        <div class="card" style="width: 20%;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    {{ itemNature.name }}
                                </h5>

                                <p>
                                    Nombre d'objets : {{ itemNature.defaultItemsCount }}
                                </p>

                                <div class="mt-auto">
                                    <a href="{{ path('app_natures_show', {'id': itemNature.id}) }}" class="btn btn-primary mt-4 form-control">
                                        Voir les détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="alert alert-info w-100" role="alert">
                        Aucun résultat
                    </div>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}
